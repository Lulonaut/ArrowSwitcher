{
  "name": "Tab arrow switcher",
  "description": "Switch tab with Ctrl + Arrow keys",
  "version": "1.0",
  "commands": {
    "tab-left": {
      "suggested_key": {
        "default": "Ctrl+Left"
      },
      "description": "Switch to the left tab"
    },
    "tab-right": {
      "suggested_key": {
        "default": "Ctrl+Right"
      },
      "description": "Switch to the right tab"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "manifest_version": 3
}
